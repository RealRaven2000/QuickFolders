											 onclick="QuickFolders.Util.openLinkInBrowser(event,'http://www.babelzilla.org/index.php?option=com_wts&amp;Itemid=203&amp;type=filelist2&amp;extension=5099')">
									<label>&qf.label.languagesLink;</label>
								</button>
							</row>
							<separator class="thin" />
							<row>
								<description class="niceFont">&qf.description.contactMe;</description>
								<button id="L5"
												onclick="QuickFolders.Options.sendMail('axelg@gofree.indigo.ie');">
									<label>&qf.label.contactLink;</label>
								</button>
							</row>
						</rows>
					</grid>
				</tabpanel>
				<!-- Licensing tab -->
				<tabpanel id="QuickFolders-Options-goPro" orient="vertical">
					<description
						oncontextmenu="QuickFolders.Util.addConfigFeature('extensions.quickfolders.donateNoMore', true, QuickFolders.Util.getBundleString('qfDonateDisableOnUpdate','Stop displaying donation page on update?'));return false;">
						&qf.label.insertLicense;</description>
					<hbox id="licenseContainer" align="start">
						<textbox id="txtLicenseKey"
										 class="licenseKey"
										 flex="1"
										 multiline="true"
										 rows="4"
										 tooltiptext="&qf.label.insertLicense.tooltip;"></textbox>
						<vbox>
							<button id="btnPasteLicense"
											label="&qf.button.pasteLicense;"
											oncommand="QuickFolders.Options.pasteLicense();" />
							<button id="btnValdidateLicense"
											label="&qf.button.validateLicense;"
											oncommand="QuickFolders.Options.validateLicense();" />
						</vbox>
					</hbox>
					<separator class="licenseSeparator" />
					<hbox>
						<label>&qf.label.licenseValid;</label>
						<label id="licenseDate" value="-" />
					</hbox>
					<separator class = "licenseSeparator" />
					<hbox id="validationResults">
					  <vbox>
							<description id="validationPassed" class="niceFont" collapsed="true">&qf.licenseValidation.passed;</description>
							<description id="validationFailed" class="niceFont" collapsed="true">&qf.licenseValidation.failed;</description>
							<description id="validationExpired" class="niceFont" collapsed="true">&qf.licenseValidation.expired;</description>
							<description id="validationInvalidEmail" class="niceFont" collapsed="true">&qf.licenseValidation.invalidMail;</description>
							<description id="validationEmailNoMatch" class="niceFont" collapsed="true">&qf.licenseValidation.notMatchedMail;</description>
					  </vbox>
						<spacer flex="1"/>
					</hbox>
					<separator />
					<vbox height="40">
						<hbox pack="end">
							<button id="btnLicense" 
                      label="get license"
										  oncommand="QuickFolders.Licenser.showDialog('licenseTab');" />
					</hbox>
					</vbox>
					<separator flex="1" />
					<groupbox id="txtKeyGenerator" collapsed="true">
					  <caption label="CREATE REGISTRATION KEY: REMOVE IN PRODUCTION - TRANSLATION UNNECESSARY!" />
						<hbox>
							<textbox id="txtEncrypt"
											 class="licenseKey"
											 flex="1" />
							<button id="btnEncryptLicense"
											label="Encrypt"
											oncommand="QuickFolders.Options.encryptLicense();" />
						</hbox>
						<separator class="thin" />
						<hbox align="center">
							<label control="txtMaxDigits">Max Digits:</label>
							<textbox id="txtMaxDigits"
											 type="number"
											 value="35"
											 width="50" />
							<button id="btnTestLicense"
											label="Decrypt + Test"
											oncommand="QuickFolders.Options.decryptLicense(true);" />
							<button id="btnRestoreLicense"
											label="Restore my own License"
											oncommand="QuickFolders.Options.restoreLicense();" />
						</hbox>
					</groupbox>
					<separator flex="1" />
				</tabpanel>
			</tabpanels>
		</tabbox>
		<separator class="thin" />
	</prefpane>
</prefwindow>