{
  "author": "Axel Grude",
  "manifest_version": 2,
  "name": "QuickFolders",
	"description": "Bookmark your favorite mail folders in Thunderbird.",
  "version": "5.0pre11",
  "developer": {
	  "name": "Axel Grude",
    "url": "http://quickfolders.org/index.html"
	},
  "applications": {
    "gecko": {
      "id": "quickfolders@curious.be",
      "strict_min_version": "68.0",
      "strict_max_version": "79.0"
    }
  },
  "icons": {
	  "16": "chrome/skin/ico/QF16x16.png",
    "32": "chrome/skin/ico/quickfolders-Icon.png",
    "64": "chrome/skin/ico/QF64x64.png"
  },
	
  "options_ui": {
    "page": "chrome/content/options.xhtml"
  },
  
  "background": {
    "scripts": ["qf-background.js"]
  },

  "experiment_apis": {
    "LegacyPrefs": {
      "schema": "chrome/content/api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "chrome/content/api/LegacyPrefs/implementation.js"
      
      }
    },
    "WindowListener": {
      "schema": "chrome/content/api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "chrome/content/api/WindowListener/implementation.js"
      }
    }
  }
   
	
}
